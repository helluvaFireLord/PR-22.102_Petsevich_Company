<Page x:Class="PR_22._102_Petsevich_Company.Pages.ProductionOrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PR_22._102_Petsevich_Company.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Производственные заказы">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <GroupBox x:Name="OrderGroup" Header="Добавление нового заказа" Margin="0 0 0 10">
            <StackPanel Orientation="Vertical" Margin="10" VerticalAlignment="Top">

                <StackPanel Orientation="Horizontal" Margin="0 5">
                    <StackPanel>
                        <TextBlock Text="Клиент"/>
                        <ComboBox x:Name="ClientBox" Width="150" DisplayMemberPath="Name"/>
                    </StackPanel>

                    <StackPanel Margin="10 0">
                        <TextBlock Text="Продукция"/>
                        <ComboBox x:Name="ProductBox" Width="150" DisplayMemberPath="Name"/>
                    </StackPanel>

                    <StackPanel Margin="10 0">
                        <TextBlock Text="Количество"/>
                        <TextBox x:Name="QuantityBox" Width="80"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0 5">
                    <StackPanel>
                        <TextBlock Text="Дата начала"/>
                        <DatePicker x:Name="StartDatePicker" Width="120"/>
                    </StackPanel>

                    <StackPanel Margin="10 0">
                        <TextBlock Text="Дата окончания"/>
                        <DatePicker x:Name="EndDatePicker" Width="120"/>
                    </StackPanel>

                    <StackPanel Margin="10 0">
                        <TextBlock Text="Статус"/>
                        <ComboBox x:Name="StatusBox" Width="120" DisplayMemberPath="Name"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0 10">
                    <Button x:Name="SaveOrder" Content="Сохранить" Width="100" Click="SaveOrder_Click"/>
                    <Button x:Name="DeleteOrder" Content="Удалить" Width="100" Margin="10 0" Click="DeleteOrder_Click" IsEnabled="False"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <DataGrid x:Name="OrdersGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  IsReadOnly="True"
                  SelectionChanged="OrdersGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Клиент" Binding="{Binding Clients.Name}" Width="150"/>
                <DataGridTextColumn Header="Продукция" Binding="{Binding Products.Name}" Width="150"/>
                <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="100"/>
                <DataGridTextColumn Header="Начало" Binding="{Binding StartDate}" Width="120"/>
                <DataGridTextColumn Header="Окончание" Binding="{Binding EndDate}" Width="120"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding StatusesOfOrder.Name}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>