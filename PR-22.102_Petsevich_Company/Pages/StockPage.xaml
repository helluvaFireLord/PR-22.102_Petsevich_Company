<Page x:Class="PR_22._102_Petsevich_Company.Pages.StockPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PR_22._102_Petsevich_Company.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Склад">

    <Grid Margin="10">
        <DataGrid x:Name="StockGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Материал" Binding="{Binding Materials.Name}"/>
                <DataGridTextColumn Header="Ед. изм." Binding="{Binding Materials.Units.Name}"/>
                <DataGridTextColumn Header="Остаток" Binding="{Binding Quantity}"/>
                <DataGridTextColumn Header="Минимум" Binding="{Binding Materials.MinStock}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>