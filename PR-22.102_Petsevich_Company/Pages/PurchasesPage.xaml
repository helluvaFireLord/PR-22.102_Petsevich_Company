<Page x:Class="PR_22._102_Petsevich_Company.Pages.PurchasesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PR_22._102_Petsevich_Company.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Поставки">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <GroupBox x:Name="PurchaseGroup" Header="Добавление новой поставки" Margin="0 0 0 10">
            <StackPanel Orientation="Vertical" Margin="10">

                <StackPanel Orientation="Horizontal" Margin="0 5">
                    <StackPanel>
                        <TextBlock Text="Поставщик"/>
                        <ComboBox x:Name="SupplierBox" Width="200" DisplayMemberPath="Name"/>
                    </StackPanel>

                    <StackPanel Margin="10 0">
                        <TextBlock Text="Материал"/>
                        <ComboBox x:Name="MaterialBox" Width="200" DisplayMemberPath="Name"/>
                    </StackPanel>

                    <StackPanel Margin="10 0">
                        <TextBlock Text="Количество"/>
                        <TextBox x:Name="QuantityBox" Width="100"/>
                    </StackPanel>

                    <StackPanel Margin="10 0">
                        <TextBlock Text="Цена"/>
                        <TextBox x:Name="PriceBox" Width="100"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0 10">
                    <Button x:Name="SavePurchase" Content="Сохранить" Width="100" Click="SavePurchase_Click"/>
                    <Button x:Name="DeletePurchase" Content="Удалить" Width="100" Margin="10 0" Click="DeletePurchase_Click" IsEnabled="False"/>
                </StackPanel>

            </StackPanel>
        </GroupBox>
        <DataGrid x:Name="PurchasesGrid"
          Grid.Row="1"
          AutoGenerateColumns="False"
          SelectionMode="Single"
          SelectionChanged="PurchasesGrid_SelectionChanged"
          IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата" Binding="{Binding PurchaseDate}" Width="150"/>
                <DataGridTextColumn Header="Материал" Binding="{Binding Materials.Name}" Width="200"/>
                <DataGridTextColumn Header="Поставщик" Binding="{Binding Suppliers.Name}" Width="200"/>
                <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="100"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>